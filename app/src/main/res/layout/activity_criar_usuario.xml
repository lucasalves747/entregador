<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarUsuario">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCriar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Criar"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/criarUsuario_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="63dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarCriar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_nome_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/criarUsuario_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="134dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_nome_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_email_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/criarUsuario_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="210dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_senha_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_telefone_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <EditText
        android:id="@+id/criarUsuario_nome_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="nome completo"
        app:layout_constraintTop_toBottomOf="@id/toolbarCriar"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_nome"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_nome"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"/>

    <EditText
        android:id="@+id/criarUsuario_email_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="134lucas@gmail.com"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="108dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_nome_Edit"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_email"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_email"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/criarUsuario_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="134dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_email_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_senha_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <EditText
        android:id="@+id/criarUsuario_senha_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Crie uma senha"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="108dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_email_Edit"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_senha"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_senha"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/criarUsuario_telefone_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Ex: 31 9 99999999"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="184dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_senha_Edit"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_telefone"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_telefone"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/criarUsuario_cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="290dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_telefone_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_cpf_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <EditText
        android:id="@+id/criarUsuario_cpf_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Ex:000.000.000-00"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="264dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_telefone_Edit"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_cpf"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_cpf"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/criarUsuario_grauParentesco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="356dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_cpf_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_grauParentesco_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <EditText
        android:id="@+id/criarUsuario_grauParentesco_Edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="nome contato de emergencia"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="341dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_cpf_Edit"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_grauParentesco"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_grauParentesco"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/criarUsuario_telefoneEmergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel Emergencia"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="429dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_grauParentesco_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_telefoneEmergencia_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <EditText
        android:id="@+id/criarUsuario_telefoneEmergencia_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Ex: 31 9 99999999 "
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="403dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_grauParentesco_Edit"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_telefoneEmergencia"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_telefoneEmergencia"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/criarUsuario_pix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chave Pix"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="491dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_telefoneEmergencia_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/criarUsuario_pix_Edit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"/>

    <EditText
        android:id="@+id/criarUsuario_pix_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Ex: 000.000.000-00"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="465dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_telefoneEmergencia_Edit"
        app:layout_constraintStart_toEndOf="@+id/criarUsuario_pix"
        app:layout_constraintBottom_toBottomOf="@+id/criarUsuario_pix"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        />

    <Button
        android:id="@+id/botaoCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/criarUsuario_pix_Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="sans-serif-light"/>


</androidx.constraintlayout.widget.ConstraintLayout>